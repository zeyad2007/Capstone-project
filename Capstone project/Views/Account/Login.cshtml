@{
    ViewData["Title"] = "Login";
}

@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="container">
    <div class="left">
        <div class="logo">
			<img src="~/Images/Logo white.png" alt="logo" />
        </div>

        <div class="form-group">
            <label>ID</label>
            <input type="text" placeholder="Doc2345" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="email" placeholder="Verconica@gmail.com" />
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="password" placeholder="********" />
        </div>

        <div class="remember">
            <div><input type="checkbox" checked /> Remember me</div>
            <a href="@Url.Action("Forgetpassword", "Forget")">Forgot password?</a>
        </div>
        <div class="btns">
            <a href="@Url.Action("Home", "Home")" class="btn-login">Login</a>
            <a href="@Url.Action("SignUp", "Account")" class="btn-signup">Sign Up</a>
        </div>



        <div class="or">──────────  Or  ──────────</div>

        <div class="social-login">
            <a href="@Url.Action("Dashboard", "Doctor")" class="google">
                <img src="~/images/Google.png" alt="Google Logo" />
                Sign in with Google
            </a>

            <button class="facebook">
                <img src="~/images/Facebook.png" alt="Facebook Logo" />
                Sign in with Facebook
            </button>
        </div>

        <div class="copyright">
            © Copyright 2025 Pro Clinic corporation
        </div>
    </div>
    <div class="right">
        <h2>Interact with the clinic digitally and get<br />better benefits than with an app</h2>
        <h3>Pro Clinic!</h3>
        <img src="~/images/Pro Clinic.png" alt="clinic illustration" />
    </div>
</div>
