@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Forget Password</title>
    <link rel="stylesheet" href="~/css/forget-password.css" />
</head>
<body>
    <div class="container">
        <a class="back-btn" href="@Url.Action("Login", "Account")">&#8592;</a>
        <div class="logo-section">
            <img src="~/Images/Logo white.png" alt="Pro Clinic Logo" class="logo" />
        </div>
        <div class="form-box">
            <p class="instruction">
                Please enter your email address and <br />
                we’ll send you instructions on how to reset your password.
            </p>

            <form action="@Url.Action("Verificationcode", "Forget")" method="post">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Example@gmail.com" required />
                <button type="submit" class="submit-btn">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>
